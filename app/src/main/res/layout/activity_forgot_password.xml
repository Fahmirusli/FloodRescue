<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_revert"
        android:layout_gravity="start"
        android:layout_marginBottom="40dp"
        app:tint="@color/white" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_popup_sync"
        android:background="@drawable/circle_bg"
        android:backgroundTint="#1F2937"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        app:tint="@color/primary_blue" />

    <TextView
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_height="35dp" android:layout_width="240dp"/>

    <TextView
        android:text="Enter your registered email address and we'll send you a link to reset your password."
        android:textColor="#9CA3AF"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_height="38dp" android:layout_width="320dp"/>

    <TextView
        android:text="Email Address"
        android:textColor="#9CA3AF"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_height="20dp"
        android:layout_width="100dp"/>
    <EditText
        android:id="@+id/etForgotEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_input_field"
        android:hint="name@example.com"
        android:textColor="@color/white"
        android:textColorHint="#6B7280"
        android:paddingStart="16dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendReset"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Send Reset Link"
        android:background="@drawable/bg_btn_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">
        <TextView
            android:text="Remember your password? "
            android:textColor="#9CA3AF"
            android:layout_height="20dp"
            android:layout_width="190dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvBackToLogin"
            android:text="Log In"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:layout_height="20dp"
            android:layout_width="60dp"/>
    </LinearLayout>
</LinearLayout>