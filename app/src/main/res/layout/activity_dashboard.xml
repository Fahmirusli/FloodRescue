<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E7EB"
    tools:context=".DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imgAvatarDashboard"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/circle_bg"
                android:padding="8dp"
                app:tint="@color/text_secondary"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:text="Welcome back,"
                    android:textColor="#4B5563"
                    android:textSize="12sp"
                    android:layout_height="18dp"
                    android:layout_width="90dp"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="20dp"
                    android:layout_width="150dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnNotification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_popup_reminder"
                app:tint="#FFFFFF"
                android:background="@drawable/bg_map_btn"
                android:padding="8dp"
                android:layout_marginEnd="8dp"/>
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#FFFFFF"
                android:background="@drawable/bg_map_btn"
                android:padding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weatherCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_weather_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvWeatherStatus"
                    android:textColor="#4ADE80"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_height="15dp"
                    android:layout_width="90dp"/>
                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btnCalendar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"/>            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvWeatherTemp"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_height="44dp"
                    android:layout_width="90dp"/>

                <TextView
                    android:id="@+id/tvWeatherCondition"
                    android:textColor="#D1D5DB"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:layout_height="18dp"
                    android:layout_width="90dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvWeatherHumidity"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_height="15dp"
                android:layout_width="90dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weatherCard"
            android:padding="20dp">

            <TextView
                android:id="@+id/chipShelters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ‚ Shelters"
                android:background="@drawable/btn_rounded_blue"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/chipFloods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§ Floods"
                android:background="@drawable/bg_chip_dark"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/chipRoads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš§ Roadblocks"
                android:background="@drawable/bg_chip_dark"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp">
            <ImageView
                android:id="@+id/btnZoomIn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@android:drawable/ic_input_add"
                app:tint="@color/white"
                android:background="@drawable/bg_map_btn" android:padding="10dp"
                android:layout_marginBottom="2dp"/>
            <ImageView
                android:id="@+id/btnZoomOut"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_minus"
                app:tint="@color/white"
                android:background="@drawable/bg_map_btn"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>
            <ImageView
                android:id="@+id/btnMyLocation"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="#1877F2" android:background="@drawable/circle_bg"
                android:backgroundTint="@color/white" android:padding="10dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:paddingTop="16dp"
        android:paddingHorizontal="24dp"
        android:paddingBottom="30dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="80dp"
        app:behavior_hideable="false">

        <View
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:background="@drawable/bg_handle"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnReport"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_btn_blue"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="@color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REPORT INCIDENT"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSOS"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_btn_red"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    app:tint="@color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOS REQUEST"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>