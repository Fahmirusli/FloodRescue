<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/btnBackLogin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_marginBottom="10dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rescue &amp; Report"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue_card"
            android:padding="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ CURRENT LOCATION"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLoc"
                android:text="Heavy Rain"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvWeather"
                android:text="âš ï¸ Flood Watch Active"
                android:textColor="@color/white"
                android:background="#33FFFFFF"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="56Â°F"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <TextView android:text="Email" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="name@example.com"
            android:textColor="@color/white"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:inputType="textEmailAddress"/>

        <TextView android:text="Password" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Enter your password"
            android:textColor="@color/white"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="@color/primary_blue"
            android:gravity="end"
            android:layout_marginTop="13dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Log In"
            android:background="@drawable/bg_blue_card"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Log In with Google"
            android:background="@drawable/bg_google_btn"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="* Emergency Report"
            android:backgroundTint="#2A1C1C"
            android:textColor="#EF4444"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
        
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="1000px"
            android:layout_height="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvSignUpLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:layout_marginLeft="150dp"/>
        </RelativeLayout>


    </LinearLayout>
</ScrollView>