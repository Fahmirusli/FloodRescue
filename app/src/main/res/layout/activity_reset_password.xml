<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:padding="24dp"

    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/btnBackReset"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_revert"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        app:tint="@color/white" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:background="@drawable/circle_bg"
        android:backgroundTint="#1F2937"
        android:padding="20dp"
        app:tint="@color/primary_blue"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:text="@string/reset_password"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:text="@string/create_a_strong_password_that_you_haven_t_used_for_other_websites"
        android:textColor="#9CA3AF"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:text="@string/new_password"
        android:textColor="#9CA3AF"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_input_field"
        android:hint="Must have at least 8 characters"
        android:textColor="@color/white"
        android:textColorHint="#6B7280"
        android:paddingStart="16dp"
        android:inputType="textPassword"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:text="Confirm New Password"
        android:textColor="#9CA3AF"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_input_field"
        android:hint="Re-enter your password"
        android:textColor="@color/white"
        android:textColorHint="#6B7280"
        android:paddingStart="16dp"
        android:inputType="textPassword"
        android:layout_marginBottom="32dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResetFinal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Reset Password"
        android:background="@drawable/bg_btn_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"/>

</LinearLayout>